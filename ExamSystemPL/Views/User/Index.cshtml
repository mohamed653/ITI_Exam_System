@model IEnumerable<DAL.Models.User>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="text-center">


<h1 class="text-dark text-decoration-underline mt-2">Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Username
            </th>
            <th>
                Password
            </th>
            <th>
                Role
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Fname
            </td>
            <td>
                @item.Lname
            </td>
            <td>
                @item.Username
            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.Role
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.UId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UId" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

    <div class="d-flex justify-content-around my-2">
        <a asp-action="index" asp-controller="admin" class="btn btn-outline-danger float-start w-25">Back to Admin dashboard</a>
        <a asp-action="Create" class="btn btn-outline-primary w-25">Add New User</a>
    </div>
</body>
</html>
